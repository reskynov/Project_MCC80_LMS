@model IEnumerable<Client.ViewModels.Classrooms.ClassroomLessonVM>

@{
    ViewData["Title"] = "Lessons";
    Layout = "_DashboardLayout";
}
@foreach (var item in Model)
{
    <div class="card mb-3" style="max-height:70px">
        <div class="row row-cols-auto">
            <div class="col d-flex justify-content-center align-items-center">
                <div class="rounded-circle bg-primary text-white d-flex justify-content-center align-items-center m-1" style="width: 40px; height: 40px;">
                    <i class="fa-solid fa-book"></i>
                </div>
            </div>
            <div class="col">
                <div class="card-body p-0 m-0">
                    <h6 class="card-text m-0">@Html.DisplayFor(modelItem => item.Name)</h6>
                    <p class="card-text"><small class="text-muted">@Html.DisplayFor(modelItem => item.CreatedDate)</small></p>
                </div>
            </div>
        </div>
    </div>
}

