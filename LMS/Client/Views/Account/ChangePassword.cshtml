@model Client.ViewModels.Accounts.ChangePasswordVM

@{
    ViewData["Title"] = "ChangePassword";
    Layout = "_LoginLayout";
}
<div class="page-header align-items-start min-vh-50 pt-5 pb-11 m-3 border-radius-lg" style="background-image: url('https://cinemagic.org.uk/wp-content/uploads/2019/09/I-Have-An-Idea.png'); background-position: top;">
    <span class="mask bg-gradient-dark opacity-6"></span>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 text-center mx-auto">
                <img src="~/assets/img/logo-lms-main.png" style="width:150px; height:100px;" alt="main_logo">
                <h1 class="text-white mb-2 mt-5">Change Password</h1>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row mt-lg-n10 mt-md-n11 mt-n10 justify-content-center">
        <div class="col-xl-4 col-lg-5 col-md-7 mx-auto">
            <div class="card z-index-0">
                <div class="card-header text-center pt-4">
                    <h5>Fill the form below</h5>
                </div>
                <div class="card-body">
                    <form action="/account/change-password" method="post">
                        <div class="mb-3">
                            <label asp-for="Email" class="control-label">Email</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="Email" aria-label="Email" required>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="control-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Password" aria-label="Password" required>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="control-label">Confirm Password</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Password" aria-label="Password" required>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="OTP" class="control-label">OTP Code (Check your Email)</label>
                            <input asp-for="OTP" type="text" maxlength="6" class="form-control" placeholder="OTP" aria-label="OTP" required>
                            <span asp-validation-for="OTP" class="text-danger"></span>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn bg-gradient-dark w-100 my-4 mb-2">Change Password</button>
                        </div>
                        <p class="text-sm mt-3 mb-0">Back to <a href="login" class="text-dark font-weight-bolder">Sign in</a></p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<footer class="footer py-5">
    <div class="container">
    </div>
</footer>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
